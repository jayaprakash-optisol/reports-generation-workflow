# Server Configuration
PORT=3000
NODE_ENV=development

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o
OPENAI_IMAGE_MODEL=dall-e-3

# Temporal Configuration
TEMPORAL_ADDRESS=localhost:7233
TEMPORAL_NAMESPACE=default
TEMPORAL_TASK_QUEUE=report-generation

# Storage Configuration
# STORAGE_TYPE: 'local' for filesystem, 'minio' for MinIO/S3
STORAGE_TYPE=local
STORAGE_PATH=./storage
REPORTS_PATH=./storage/reports
UPLOADS_PATH=./storage/uploads
CHARTS_PATH=./storage/charts

# MinIO Configuration (only needed if STORAGE_TYPE=minio)
MINIO_ENDPOINT=http://localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_REPORTS=reports
MINIO_BUCKET_UPLOADS=uploads
MINIO_BUCKET_CHARTS=charts
MINIO_USE_SSL=false

# Report Configuration
MAX_UPLOAD_SIZE_MB=20
DEFAULT_REPORT_STYLE=business
DEFAULT_OUTPUT_FORMAT=PDF

# LLM Configuration
LLM_MAX_TOKENS=4096
LLM_TEMPERATURE=0.7

# Logging
LOG_LEVEL=info


