# Server Configuration
PORT=3000
NODE_ENV=development

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o
OPENAI_IMAGE_MODEL=dall-e-3

# Temporal Configuration
TEMPORAL_ADDRESS=localhost:7233
TEMPORAL_NAMESPACE=default
TEMPORAL_TASK_QUEUE=report-generation

# Storage Configuration
# STORAGE_TYPE: 'local' for filesystem, 'minio' for MinIO/S3
STORAGE_TYPE=local
STORAGE_PATH=./storage
REPORTS_PATH=./storage/reports
UPLOADS_PATH=./storage/uploads
CHARTS_PATH=./storage/charts

# MinIO Configuration (only needed if STORAGE_TYPE=minio)
MINIO_ENDPOINT=http://localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_REPORTS=reports
MINIO_BUCKET_UPLOADS=uploads
MINIO_BUCKET_CHARTS=charts
MINIO_USE_SSL=false

# Report Configuration
MAX_UPLOAD_SIZE_MB=20
DEFAULT_REPORT_STYLE=business
DEFAULT_OUTPUT_FORMAT=PDF

# LLM Configuration
LLM_MAX_TOKENS=4096
LLM_TEMPERATURE=0.7

# Logging
LOG_LEVEL=info

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TTL_SECONDS=3600

# Cost Tracking
ENABLE_COST_TRACKING=true
OPENAI_COST_PER_1K_TOKENS_INPUT=0.005
OPENAI_COST_PER_1K_TOKENS_OUTPUT=0.015
OPENAI_IMAGE_COST_PER_IMAGE=0.040

# Docling Configuration
DOCLING_ENABLED=true
DOCLING_URL=http://localhost:5001
DOCLING_CHUNK_SIZE_MB=10
DOCLING_TIMEOUT_MS=300000

